---
import "@fontsource/sen";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="My personal portfolio website showcasing my projects, highlighting my skills and expertise, and providing relevant information about me."
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-ctp-base font-sans">
    <div class="bg-gradient-to-b from-ctp-base to-ctp-crust">
      <slot />
      <style is:global>
        html {
          scroll-behavior: smooth;
        }
        code {
          font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
        }

        @media (prefers-reduced-motion: reduce) {
          :global(html) {
            scroll-behavior: auto;
          }
        }
      </style>
    </div>
  </body>
</html>
